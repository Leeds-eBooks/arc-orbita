// @flow

export type Category =
  | 'books'
  | 'videos'
  | 'publications'
  | 'online'
  | 'radio'
  | 'installations'

export type Video = $ReadOnly<{|
  type: 'video',
  category: Category,
  name: string,
  src: string | $ReadOnlyArray<string>,
  thumb: string,
  backgroundColor: string,
  mainColor: string,
  info: {
    title: string,
    description: string,
  },
  isCategorySample?: true,
|}>

export type Image = $ReadOnly<{|
  type: 'image',
  category: Category,
  name: string,
  src: string | $ReadOnlyArray<string>,
  backgroundColor: string,
  coverColor?: string,
  info: {
    title: string,
    description: string,
  },
  pages?: $ReadOnlyArray<string>,
  videos?: $ReadOnlyArray<string>,
  pagesAspectRatio?: number,
  isCategorySample?: true,
|}>

export type Audio = $ReadOnly<{|
  type: 'audio',
  category: Category,
  name: string,
  src: string,
  thumb: string,
  backgroundColor: string,
  info: {
    title: string,
    description: string,
  },
  isCategorySample?: true,
|}>

export type ContentUnion = Video | Image | Audio

declare module.exports: $ReadOnlyArray<ContentUnion>
